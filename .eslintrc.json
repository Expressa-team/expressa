{
    "extends": "eslint:recommended",
    "rules": {
        "no-var": "error",
        "prefer-const": "error",
        "no-console": ["error", { "allow": ["error"] }]
    },
    "globals": {
        "after": true,
        "before": true,
        "describe": true,
        "it": true,
        "xit": true,
        "xdescribe": true
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true,
        "node": true
    }
}
